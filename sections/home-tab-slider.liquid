<div class="tab-container">
  <div class="tab_heading">
    <div class="page-width">
    <div class="heading_in">
      {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
      {% endif %}
      <ul class="tabs">
        {% for block in section.blocks %}
          {% if block.settings.title != blank and block.settings.collection != blank %}
            <li {% if forloop.first %}class="active"{% endif %} rel="tab{{ forloop.index }}">{{ block.settings.title }}</li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
    </div>
  </div>
    <div class="tab_container products-slider">
    <div class="page-width">
      {% for block in section.blocks %}
      {% if block.settings.title != blank and block.settings.collection != blank %}
        <h3 class="{% if forloop.first %}d_active{% endif %} tab_drawer_heading" rel="tab{{ forloop.index }}">{{ block.settings.title }}</h3>
        <div id="tab{{ forloop.index }}" class="tab_content">
          <div class="collection-listing">
            {% assign collection = collections[block.settings.collection] %}
            <ul class="product-list grid ">
              {%- for product in block.settings.collection.products -%}
               <li class="grid__item">
                {% render 'card-product',
                  card_product: product,
                  show_secondary_image: true,
                  show_vendor: section.settings.show_vendor,
                  show_image_outline: true,
                  show_rating: true,
                  show_quick_add: section.settings.enable_quick_add,
                  section_id: section.id
                %}
              </li>
            {%- endfor -%}
            </ul>
          </div>
        </div>
      {% endif %}
    {% endfor %}
    </div>
    </div>
</div>


{% schema %}
{
  "name": "Collection Tab",
  "class": "productSliderTab productSliderHome",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "header",
      "content": "t:sections.featured-collection.settings.header.content"
    },
    {
      "type": "checkbox",
      "id": "show_image_outline",
      "default": true,
      "label": "Show Image Outline"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Show Vendor Name"
    },
    {
      "type": "checkbox",
      "id": "enable_quick_add",
      "default": true,
      "label": "t:sections.featured-collection.settings.enable_quick_buy.label"
    }
  ],
"blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        }, {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
"presets":[
{
  "name":"Collection Tab",
  "category":"New"
}
]
}
{% endschema %}